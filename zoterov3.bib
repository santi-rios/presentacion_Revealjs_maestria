@article{sclafani2006,
  title = {Enhanced Sucrose and {{Polycose}} Preference in Sweet "Sensitive" ({{C57BL}}/{{6J}}) and "Subsensitive" ({{129P3}}/{{J}}) Mice after Experience with These Saccharides},
